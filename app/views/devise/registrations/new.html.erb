<div class="form-house">
  <div class="register-form-container">
    <div class="col register-col-1">
      <div class="image-layer">
        <%= image_tag("white-outline.png", class: "form-image-main") %>
        <%= image_tag("dots.png", class: "form-image dots") %>
        <%= image_tag("coin.png", class: "form-image coin") %>
        <%= image_tag("spring.png", class: "form-image spring") %>
        <%= image_tag("rocket.png", class: "form-image rocket") %>
        <%= image_tag("cloud.png", class: "form-image cloud") %>
        <%= image_tag("stars.png", class: "form-image stars") %>
      </div>
      <p ><strong class="form-subtitle">Purse </strong></p>
    </div>
    <div class="register-form-box">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <h1 class="register-title">Sign up</h1>
        <div class="form-fields">
          <div class="social-icon" id="social-icons">
            <span><i class="bx bxl-google"></i></span>
            <span><i class="bx bxl-linkedin"></i></span>
            <span><i class="bx bxl-github"></i></span>
            <span><i class="bx bxl-facebook"></i></span>
          </div>
          <div class="register-fields">
            <div class="register-f">
              <%= f.input :first_name,
                          label: '',
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email",
                          :'placeholder' => 'first name' } %>
              <box-icon name='user-pin' ></box-icon>
            </div>
            <div class="register-f">
              <%= f.input :last_name,
                          label: '',
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email",
                          :'placeholder' => 'last name' } %>
              <box-icon name='user-pin' ></box-icon>
            </div>
            <div class="register-f">
              <%= f.input :email,
                          label: '',
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email",
                          :'placeholder' => 'email' } %>
              <box-icon name='envelope'></box-icon>
            </div>
            <div class="register-f">
              <%= f.input :password,
                          label: '',
                          required: true,
                          input_html: { autocomplete: "new-password",
                          :'placeholder' => 'password: minimum 6 characters' } %>
              <box-icon name='lock-alt' ></box-icon>
            </div>
            <div class="register-f">
              <%= f.input :password_confirmation,
                          label: '',
                          required: true,
                          input_html: { autocomplete: "new-password",
                          :'placeholder' => 'confirm password' } %>
              <box-icon name='lock-alt' ></box-icon>
            </div>
            <div class="register-f">
              <%= f.input :profile_photo,
                          as: :file,
                          label: ''%>
              <box-icon name='photo-album' ></box-icon>
            </div>
            <div class="register-actions">
              <%= f.button :submit, "Sign up", class: 'session-btn' %>
              <%= link_to "Sign in", new_session_path(resource_name), class: 'session-btn' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
