<div class="form-house">
  <div class="form-container">
    <div class="col col-1">
      <div class="image-layer">
        <%= image_tag("white-outline.png", class: "form-image-main") %>
        <%= image_tag("dots.png", class: "form-image dots") %>
        <%= image_tag("coin.png", class: "form-image coin") %>
        <%= image_tag("spring.png", class: "form-image spring") %>
        <%= image_tag("rocket.png", class: "form-image rocket") %>
        <%= image_tag("cloud.png", class: "form-image cloud") %>
        <%= image_tag("stars.png", class: "form-image stars") %>
      </div>
      <p >Welcome to <strong class="form-subtitle">my app </strong>Login and explore</p>
    </div>
    <div class="form-box">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="form-title">Sign in</h1>
        <div class="form-fields">
          <div class="social-icon" id="social-icons">
            <span><i class="bx bxl-google"></i></span>
            <span><i class="bx bxl-linkedin"></i></span>
            <span><i class="bx bxl-github"></i></span>
            <span><i class="bx bxl-facebook"></i></span>
          </div>
          <div class="input-f">
            <%= f.input :email,
                        label: '',
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email",
                        :'placeholder' => 'email' } %>
            <box-icon name='envelope'></box-icon>
          </div>
          <div class="input-f">
            <%= f.input :password,
                        label: '',
                        required: true,
                        input_html: { autocomplete: "current-password",
                        :'placeholder' => 'password' } %>
            <box-icon name='lock-alt' ></box-icon>
          </div>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
        <div class="signin-actions">
          <%= f.button :submit, "Sign in", class: 'session-btn' %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
